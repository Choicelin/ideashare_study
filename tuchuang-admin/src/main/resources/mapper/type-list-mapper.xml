<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="mini.ideashare.cms.dao.ArticleTypeDAO">

    <resultMap id="BaseResultMap" type="mini.ideashare.cms.model.ArticleType" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="lang" property="lang" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="queryCondition" >
        <where>
            <if test="id != null" >
                and id=#{id}
            </if>
            <if test="lang != null" >
                and lang=#{lang}
            </if>
        </where>
    </sql>

    <sql id="Base_Column_List">
id,lang
</sql>
    <insert id="insertArticleType" parameterType="mini.ideashare.cms.model.ArticleType">
        insert into article_type
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                id,
            </if>
            <if test="lang != null" >
                lang,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," ><if test="id != null">
            #{id,jdbcType=BIGINT},
        </if>
            <if test="lang != null">
                #{lang,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <update id="updateArticleType" parameterType="mini.ideashare.cms.model.ArticleType">
        UPDATE article_type
        <trim prefix="set" suffixOverrides="," >
            <if test="id != null">
                id = #{id},
            </if>
            <if test="lang != null">
                lang = #{lang},
            </if>
        </trim>
        WHERE  id = #{id}
    </update>
    <select id="listArticleType" parameterType="mini.ideashare.cms.qc.ArticleTypeQC" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" />
        from article_type <include refid="queryCondition" />
        <if test="sortBy != null and sortType != null" >
            order by ${sortBy} ${sortType}
        </if>
        <if test="page != null">
            <![CDATA[ limit #{page.startIndex},#{page.pageSize} ]]>
        </if>
    </select>
    <select id="countArticleType" parameterType="mini.ideashare.cms.qc.ArticleTypeQC" resultType="java.lang.Integer">
        SELECT count(*) from article_type
        <include refid="queryCondition"></include>
    </select>

</mapper>
